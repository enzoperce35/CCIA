<% all_coins = @coins.sort_by { |k| k['vs_24h'] }.reverse %>

<table class = 'table'>
  
  <thead>
    <tr>
      <th>Coin</th>
      <th>Trend</th>
    </tr>
  </thead>
  
  <% all_coins.each_with_index do |coin, index| %>
    <% user_coin = user( coin ) %>
    <% price_gain = coin['price_gain'] %>
    <% trade_ready = trade_ready?( user_coin, price_gain ) %>

    <% id_target = 'prog-' + index.to_s %>
    <% status = coin['vs_24h'] %>
    <% data = status.to_s + '%' %>
    <% index = index.to_s %>
    
    <tbody>
      <tr id="<%= coin['id'] %>">
        <td style="margin-bottom: 0%; font-size: smaller;">
          <% if trade_ready %>
            <div>
              <div style="font-size: smaller; margin-top: 5px">
                <%= link_to coin['id'].titleize, root_path( trade_coin: coin['id'] ), :class=> "btn btn-dark btn-sm", :method => :get %>
              </div>
            </div>
          <% else %>
            <div style="font-size: smaller;">
              <img src=<%= coin['image']%>>
              <%= link_to coin['symbol'], coin_path(user_coin), method: 'get' %>
              <%= "\u{1FA99}".encode('utf-8') if is_user_owned?(user_coin) %>
            </div>

            <hr style="width:85px; margin-top:0%; margin-bottom:0%">

            <div style="font-size: smaller; margin-left:5px">
              <%= "\u{20B1}".encode('utf-8') + humanize_price( current_price_of( coin ) ).to_s %>
            </div>
          <% end %>
        </td>

        <td style="padding:0%">
          <div class="parent-container d-flex">
            <div class="container" style="margin-top:10px;">
              <div class="progress" style="width: 150px; margin-top:7px">
                <div id=<%= id_target %> class="progress-bar <%= 'bg-info' %>" role="progressbar" aria-valuenow="41" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
          
              <div class="my-grid" >
                <% trend_sum = sum_price_changes(coin['trend']) %>
            
                <% coin['trend'].each_with_index do |trend, index| %>
                  <% trend_color, trend_value = trend %>
                  <% trend_change = percentage_between( trend_value, trend_sum ) %>
              
                  <% trend = "width:" + trend_change.to_s + '%;' + "background-color:" + trend_color %>
                  <% trend_class = 'col-' + (index + 1).to_s + '-10 '%>

                  <% unless trend_change < 1 %>
                    <div class=<%= trend_class %> style=<%= trend %>></div>
                  <% end %>
                <% end %>
              </div>
            </div>

            <div style="margin-top: 7px;">
              <div class='obs-data'>
                <% if price_gain == 'N/A' %>
                  <%= price_gain %>
                <% else %>
                  <% color = "color:" + ( price_gain >= 0 ? "green" : "red" ) %>
                
                  <em style=<%= color %>>
                    <%= price_gain.abs.round(2) %>
                  </em>
                <% end %>
              </div>

              <hr style="margin-top:0px; margin-bottom:0px">

              <div style="font-size: small; text-align: right">
                <% holding_price = user_coin.on_hold.nil? ? 'N/A' : ( user_coin.on_hold * current_price_of( coin ) ).round(2).to_s %>
                <%= holding_price == 'N/A' ? "\u{20B1}".encode('utf-8') + '0.00' : "\u{20B1}".encode('utf-8') + holding_price %>
              </div>

              <hr style="margin-top:0px; margin-bottom:0px">

              <div class='obs-data'>
                <% gain = ( percentage_between( coin['current_price'], user_coin.observed_price ) - 100 ) %>
                <% color = "color:" + ( gain >= 0 ? "green" : "red" ) %>

                 <em style=<%= color %>>
                    <%= gain.round(2) %>
                  </em>
              </div>
            </div>
          </div>
        </td>
      </tr>
    </tbody>

    <style>
      :root {
      --data: <%= data %>;
      --index: <%= index %>;
    }
    </style>

    <script>
      var css_root = document.querySelector(':root');
      var css_data = getComputedStyle(css_root);
  
      var data = css_data.getPropertyValue('--data');
      var index = css_data.getPropertyValue('--index');

      data_arr.push(data)
      id_arr.push(Number(index))

      render_data(data_arr, id_arr);
    </script>
  <% end %>
</table><br>

<hr>

<div style="float: right;">
  <% if @timer == 1000 %>
    <%= link_to "\u{1F13C}".encode('utf-8'), root_path(auto_timer: true), method: 'get' %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
  <% else %>
    <%= link_to "\u{1F130}", root_path, method: 'get' %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
  <% end %>
    
    <%= link_to "\u{1F9F9}".encode('utf-8'), root_path(unobserve: @coin_ids), method: 'get', data: { confirm: 'Are you sure you want to remove observed coins?'} %>
</div>

