<% refresh = "\u{1F5D8}".encode('utf-8') %>

<div id='reload' style="text-align:right"><span id="cnt" style="color:red;">60</span></div>

<script>
  var counter = 60;
    
  window.setInterval(function () {
    counter--;
        
    if (counter >= 0) {
      var span;
        span = document.getElementById("cnt");
        span.innerHTML = counter;
      }
        
      if (counter === 0) {
        clearInterval(counter);
      }
  
    }, 1000);
  
  window.setInterval('refresh()', 60000);
  
  function refresh() {
    refresh = document.getElementById('reload')

    refresh.innerHTML = '<%= refresh %>'

    refresh.style.fontSize = 'x-large'
    
    refresh.addEventListener('click', function() {
      window.location.reload();
    });
  }
</script>
  