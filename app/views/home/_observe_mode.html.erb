<%= render 'observe_view' %>

<script>
  var counter = "<%= @timer %>";
    
  window.setInterval(function () {
    counter--;
        
    if (counter >= 0) {
      var span;
        span = document.getElementById("cnt");
        span.innerHTML = counter;
      }
        
      if (counter === 0) {
        clearInterval(counter);
      }
  
    }, 1000);
  
  window.setInterval('refresh()', counter * 1000);
  
  function refresh() {
    window  .location.reload();
  }
</script>
  