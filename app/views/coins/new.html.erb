<%= simple_form_for @coin do |f| %>
  <%= f.label 'Select Coin' %> 
  <%= f.input :coin_id, as: :select, collection: @coins, label_method: :first, value_method: :second, label: false, input_html: { class: "form-control", required: true } %><br>
  
  <%= f.label 'Coin Type' %> 
  <%= f.input :coin_type, as: :select, collection: [ 'altcoin', 'stablecoin', 'shitcoin' ], label: false, input_html: { class: "form-control", required: true } %><br>
  
  <%= f.submit 'Add Coin' %> 
<% end %>
