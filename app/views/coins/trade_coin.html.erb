<%= simple_form_for :coins, url: root_path, method: 'get' do |f| %>
  <%= f.label 'Select Coin' %>
  <%= f.input :trade, as: :select, label: false, collection: @user_coins, label_method: :coin_id, value_method: :coin_id, input_html: { class: "form-control", required: true } %><br>

  <%= f.submit 'Show Trades' %>
<% end %>
